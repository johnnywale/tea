<section class="has-bg p-0 d-flex main-hero" style="background-image: url(https://www.24k.com.sg/workz/johnny/mist-valley-shop/v2/images/hero-contact-us.jpg);">
  <div class="caption-holder">
    <h2>Blog</h2>
  </div>
</section>
<section class="subpage pb-0">
  <figure class="subsection">
    <div class="container">
      <div class="section-body">
        <div class="row list-blog">
        {%- for article in blog.articles -%}
              {%- render 'article-card', article: article, image_height: section.settings.image_height, show_image: section.settings.show_image, show_date: section.settings.show_date, show_author: section.settings.show_author -%}
          {%- endfor -%}
        </div>

        <div class="pagi-nav justify-content-center d-flex flex-nowrap mt-5">
          <span class="navi"><a href="javascript:void(0)" title=""><i class="fa fa-angle-left"></i></a></span>
          <span class="page current"><a href="javascript:void(0)" title="">1</a></span>
          <span class="page"><a href="javascript:void(0)" title="">2</a></span>
          <span class="page"><a href="javascript:void(0)" title="">3</a></span>
          <span class="navi"><a href="javascript:void(0)" title=""><i class="fa fa-angle-right"></i></a></span>
        </div>
      </div>
    </div>
  </figure>
  <figure class="subsection mainsec-subscribe pt-0">
    <div class="container">
      <div class="section-body">
        <div class="subscribe-box">
          <div class="img-holder" style="background-image: url(https://www.24k.com.sg/workz/johnny/mist-valley-shop/v2/images/bg-subscribe-box.jpg);"></div>
          <div class="caption-holder">
            <h2 class="mb-2">Subscribe Our Newsletter</h2>
            <p>Sign up for our newsletter</p>
            <form action="" class="form-subscribe">
              <div class="input-group mb-3">
                <input type="email" class="form-control" placeholder="Email Address" aria-label="Email Address" aria-describedby="button-addon2">
                <div class="input-group-append">
                  <button class="btn btn-site" type="button" id="button-addon2">SIGNUP</button>
                </div>
              </div>
            </form>
          </div>
        </div>
      </div>
    </div>
  </figure>
  <figure class="subsection has-parallax has-bg mb-0" style="background-image: url(https://www.24k.com.sg/workz/johnny/mist-valley-shop/v2/images/bg-footer-parallax-1.jpg);"></figure>
</section>
<!-- end section -->
