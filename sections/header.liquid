                  url: path+'?section_id=shopping-cart',
                  dataType: 'html',
                  success: function (html, status, request) {
                    $("#shopify-section-shopping-cart").replaceWith(html);
                    let count = $("#check_total_count").val()
                    $("#header-item-count").text(count)

                  },
