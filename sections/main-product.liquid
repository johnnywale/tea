                        <div class="product-detail-overview mt-5">
                            <div class="prod-category">{{ product.type }}</div>
                            <h1 class="prod-title">{{ product.title }}</h1>
                            <div class="prod-price">{{ product.price |  money }}</div>
                            <!--
                            <p class="highlights">{{ product.description  }} </p>
                            -->
