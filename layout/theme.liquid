    <script src="https://cdnjs.cloudflare.com/ajax/libs/iScroll/5.2.0/iscroll.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/OwlCarousel2/2.3.4/owl.carousel.min.js"></script>
    {{ 'main.js' | asset_url | script_tag }}

    <script>document.documentElement.className = document.documentElement.className.replace('no-js', 'js');</script>
    <div style="visibility: hidden">
        {{ content_for_header }}
    </div>
    <style>
        .header-body {
            z-index: 1
        }

        .header-topbar .site-tools > ul > li > a > i {
            font-size: 28px;
        }

        #off-canvas-top {
            background-color: #fff !important;
            padding: 30px 0 60px;
            height: auto
        }

        #off-canvas-top .nav-content {
            width: 90%;
            margin: 30px auto;
        }

        #off-canvas-top .input-group {
            flex-wrap: nowrap;
        }

        #off-canvas-top .input-group .btn {
            border: none;
            font-size: 16px;
        }

        #off-canvas-top .input-search {
            border: none;
            border-bottom: 1px solid #333;
            padding: 12px 45px 12px 12px;
            outline: none;
            box-shadow: none;
            font-size: 16px;
            flex-grow: 1
        }

        #off-canvas-top .input-group-append {
            position: absolute;
            bottom: 2px;
            right: -10px;
        }

        #off-canvas-top .input-search:focus {
            outline: none;
        }

        #off-canvas-top .l-wrapper {
            width: 90%;
            margin: 0 auto;
            overflow: hidden;
        }

        #off-canvas-right-push, #main-nav-mobile {
            background-color: #fff
        }

        #off-canvas-right-push ul li:last-child {
            position: fixed;
            bottom: 0;
            width: 100%;
            background-color: #f1f1f1;
            border-top: 1px solid #ddd
        }

        #off-canvas-right-push .st-list-cart-items {
            height: calc(100vh - 210px);
            overflow-y: scroll;
            padding: 0;
        }

        .nav-title {
            font-size: 19px;
            font-weight: normal;
            padding: 20px 0;
            color: #333;
        }

        .js-offcanvas-close {
            position: absolute;
            top: 15px;
            right: 15px;
            color: #333;
        }

        .js-offcanvas-close:hover {
            color: var(--main-color)
        }

        .st-cart-item .st-product_remove > a > i {
            font-size: 14px !important;
        }

        .c-offcanvas--right {
            width: 27em;
        }

        .c-offcanvas-bg.c-offcanvas-bg--push.c-offcanvas-bg--right.is-open {
            transform: translate3d(-27em, 0, 0)
        }

        .c-offcanvas-bg.is-animating, .c-offcanvas-bg.is-open {
            background-color: rgba(0, 0, 0, .4)
        }

        #cartWrapper ul {
            list-style: none;
            padding: 0;
        }

        #cartWrapper ul li {
            margin-left: 0;
        }

        #cartWrapper li a {
            color: #333;
        }

        #cartWrapper li .st-cart-actions a {
            color: #fff
        }

        #cartWrapper .nav-title {
            padding: 15px;
        }

        #main-nav-mobile a {
            color: #333;
        }

        .hamburger-menu {
            display: inline-block;
            height: 43px;
            transition: all 0.3s ease-in-out;
        }

        .hamburger-menu .menu-item {
            background: #fff;
            display: block;
            height: 2px;
            margin: 0 0 8px;
            transition: all 0.3s ease-in-out;
            width: 30px;
        }

        @media (max-width: 991px) {
            .drawer-hamburger {
                display: block;
            }
        }

        @media (max-width: 768px) {
            .search-input {
                height: auto;
            }

            #off-canvas-top {
                padding-bottom: 0;
            }
        }
    </style>
</head>
<body>

<div id="preloader"></div>

<header class="navbar navbar-expand-lg">
    <div class="container">

        {% section 'header' %}

        <div class="header-body">

            <a class="navbar-brand m-0 py-0" href="/"><img
                        src="https://www.24k.com.sg/workz/johnny/mist-valley-shop/v2/images/logo.png" alt=""></a>

            <div id="GloboDesktopMenu"></div>


        </div>
    </div>
</header>


<main role="main c-offcanvas-content-wrap" class="content" role="main">
    <div class="c-page l-wrapper u-pos-relative">
        {{ content_for_layout }}
    </div>
</main>
<aside class="js-offcanvas" data-offcanvas-options='{"modifiers":"right,push"}' id="off-canvas-right-push" role="complementary">
    <div class="c-offcanvas__inner o-box u-pos-relative">
        <div class="site-tools" id="cartWrapper" class="p-5">
            {% section 'shopping-cart' %}
        </div>
    </div>
</aside>



{% section 'footer' %}

<ul hidden>
    <li id="a11y-refresh-page-message">{{ 'accessibility.refresh_page' | t }}</li>
</ul>

<script>
    window.routes = {
        cart_add_url: '{{ routes.cart_add_url }}',
        cart_change_url: '{{ routes.cart_change_url }}',
        cart_update_url: '{{ routes.cart_update_url }}',
        predictive_search_url: '{{ routes.predictive_search_url }}'
    };

    window.cartStrings = {
        error: `{{ 'sections.cart.cart_error' | t }}`,
        quantityError: `{{ 'sections.cart.cart_quantity_error_html' | t }}`
    }

    window.variantStrings = {
        addToCart: `{{ 'products.product.add_to_cart' | t }}`,
        soldOut: `{{ 'products.product.sold_out' | t }}`,
        unavailable: `{{ 'products.product.unavailable' | t }}`,
    }

    window.accessibilityStrings = {
        shareSuccess: `{{ 'general.share.success_message' | t }}`,
    }
</script>

{%- if settings.predictive_search_enabled -%}
    <script src="{{ 'predictive-search.js' | asset_url }}" defer="defer"></script>
{%- endif -%}

<script>




    function update_item(line, quantity, container) {
        let ct = "shopify-section-template--15405978288318__cart-items"
        const content = {
            "line": line,
            "quantity": quantity,
            "sections": [
                ct
            ],
            "sections_url": "/cart"
        };
        $.ajax({
            headers: {
                Accept: "application/javascript",
            },
            type: "POST",
            url: "/cart/change",
            contentType: "application/json",
            data: JSON.stringify(content),
            datatype: "json",
            success: function (req) {
                if (quantity==0){
                    window.location.reload()
                }
                let data = JSON.parse(req)
                for (var i = 0; i < data.items.length; i++) {
                    var item = data.items[i];
                    var selector = ".item-line"+(i+1)+"_quantity"
                    $(selector).val(item.quantity)
                    $(selector).html(item.quantity)
                    var final_price = data.items[i].line_price
                    var selector = ".item-final-line"+(i+1)+"_price"
                    console.log(selector)
                    $(selector).text('$'+final_price/100)
                }
                $(".cart-total-price").html('$'+data.total_price/100 + ' USD')
                $(".cart-number").text(data.item_count)

            }
        });
    }

    $("#checkout,.checkout").click(function () {
        $("#checkoutform").submit();
    });

    $(document).on("click", ".remove-item", function () {
        let line = $(this).parents(".cart-item:first").attr("idx")
        update_item(line, 0,"cart-table")
    })

</script>

<form id="checkoutform" method="post" action="/cart">
    <input type="hidden" name="checkout" value="">
</form>
</body>
