<section class="has-bg p-0 d-flex main-hero" style="background-image: url(https://cdn.shopify.com/s/files/1/0598/2765/0750/files/hero-cart_b7447a0e-804b-4552-b062-b6f381c3d58c.jpg?v=1653030042);">
  <div class="caption-holder">
    <h2>Log In</h2>
  </div>
</section>
<!-- end section -->

<section class="subpage pb-0">
  <figure class="subsection">
    <div class="container">
      <div class="section-body mx-auto" style="max-width: 600px;">

          {% assign recover_success = form.posted_successfully? %}
          {%- if recover_success == true -%}
              <h3 class="form__message" tabindex="-1" autofocus>
                  <svg aria-hidden="true" focusable="false" role="presentation" viewBox="0 0 13 13">
                      <path d="M6.5 12.35C9.73087 12.35 12.35 9.73086 12.35 6.5C12.35 3.26913 9.73087 0.65 6.5 0.65C3.26913 0.65 0.65 3.26913 0.65 6.5C0.65 9.73086 3.26913 12.35 6.5 12.35Z" fill="#428445" stroke="white" stroke-width="0.7"/>
                      <path d="M5.53271 8.66357L9.25213 4.68197" stroke="white"/>
                      <path d="M4.10645 6.7688L6.13766 8.62553" stroke="white">
                  </svg>
                  {{ 'customer.recover_password.success' | t }}
              </h3>
          {%- endif -%}

        <div class="form-area form-login-wrapper">
          {%- form 'customer_login', novalidate: 'novalidate' -%}

            <div class="form-group">
              <label for="">Email</label>
              <input type="email" name="customer[email]" class="form-control" placeholder="Email Address">
            </div>
            <div class="form-group">
              <label for="">Password</label>
              <input name="customer[password]" type="password" class="form-control">
            </div>

              {%- if form.errors -%}
                  <small id="RecoverEmail-email-error" class="form__message">
                      <svg aria-hidden="true" focusable="false" role="presentation" viewBox="0 0 13 13">
                          <circle cx="6.5" cy="6.50049" r="5.5" stroke="white" stroke-width="2"/>
                          <circle cx="6.5" cy="6.5" r="5.5" fill="#EB001B" stroke="#EB001B" stroke-width="0.7"/>
                          <path d="M5.87413 3.52832L5.97439 7.57216H7.02713L7.12739 3.52832H5.87413ZM6.50076 9.66091C6.88091 9.66091 7.18169 9.37267 7.18169 9.00504C7.18169 8.63742 6.88091 8.34917 6.50076 8.34917C6.12061 8.34917 5.81982 8.63742 5.81982 9.00504C5.81982 9.37267 6.12061 9.66091 6.50076 9.66091Z" fill="white"/>
                          <path d="M5.87413 3.17832H5.51535L5.52424 3.537L5.6245 7.58083L5.63296 7.92216H5.97439H7.02713H7.36856L7.37702 7.58083L7.47728 3.537L7.48617 3.17832H7.12739H5.87413ZM6.50076 10.0109C7.06121 10.0109 7.5317 9.57872 7.5317 9.00504C7.5317 8.43137 7.06121 7.99918 6.50076 7.99918C5.94031 7.99918 5.46982 8.43137 5.46982 9.00504C5.46982 9.57872 5.94031 10.0109 6.50076 10.0109Z" fill="white" stroke="#EB001B" stroke-width="0.7">
                      </svg>
                      {{ form.errors.messages['form'] }}
                  </small>
              {%- endif -%}



              <div class="form-group mt-4 text-center">
                  <input id="submit" type="submit" class="btn btn-site" value="Login">
              </div>

              {% comment %}<input type="submit" class="btn btn-site" value="">{% endcomment %}
              <p class="text-center"><a href="javascript:void(0)" class="btn-forgot-password">Forgot your password?</a></p>
            </div>
          {%- endform -%}
          <div class="form-area form-forgot-password-wrapper" style="display:none">
              {%- form 'recover_customer_password' -%}

              <h2 class="text-center" style="color: var(--main-color)">Reset Password</h2>
            <p class="text-center">We will send you an email to reset your password</p>
            <div class="form-group"><input class="form-control" name="customer[password]" type="email" placeholder="Email Address"></div>


                  {%- if form.errors -%}
                      <small id="RecoverEmail-email-error" class="form__message">
                          <svg aria-hidden="true" focusable="false" role="presentation" viewBox="0 0 13 13">
                              <circle cx="6.5" cy="6.50049" r="5.5" stroke="white" stroke-width="2"/>
                              <circle cx="6.5" cy="6.5" r="5.5" fill="#EB001B" stroke="#EB001B" stroke-width="0.7"/>
                              <path d="M5.87413 3.52832L5.97439 7.57216H7.02713L7.12739 3.52832H5.87413ZM6.50076 9.66091C6.88091 9.66091 7.18169 9.37267 7.18169 9.00504C7.18169 8.63742 6.88091 8.34917 6.50076 8.34917C6.12061 8.34917 5.81982 8.63742 5.81982 9.00504C5.81982 9.37267 6.12061 9.66091 6.50076 9.66091Z" fill="white"/>
                              <path d="M5.87413 3.17832H5.51535L5.52424 3.537L5.6245 7.58083L5.63296 7.92216H5.97439H7.02713H7.36856L7.37702 7.58083L7.47728 3.537L7.48617 3.17832H7.12739H5.87413ZM6.50076 10.0109C7.06121 10.0109 7.5317 9.57872 7.5317 9.00504C7.5317 8.43137 7.06121 7.99918 6.50076 7.99918C5.94031 7.99918 5.46982 8.43137 5.46982 9.00504C5.46982 9.57872 5.94031 10.0109 6.50076 10.0109Z" fill="white" stroke="#EB001B" stroke-width="0.7">
                          </svg>
                          {{ form.errors.messages['form'] }}
                      </small>
                  {%- endif -%}

            <div class="form-group mt-4 text-center">
                  <input type="submit" class="btn btn-site" value="Reset Password">
            </div>
              <p class="text-center"><a href="javascript:void(0)" class="btn-cancel-to-login">Cancel</a></p>
              {%- endform -%}
        </div>

        </div>
      </div>
    </div>
  </figure>
  <figure class="sub-section bg-light border-top border-bottom mb-5">
    <div class="container">
      <div class="section-body pt-5 text-center">
        <div class="wrapper mx-auto" style="max-width: 600px; min-height: 300px; display: flex; justify-content: center; align-items: center; flex-direction: column">
          <h2 style="color: var(--main-color)">New Customers?</h2>
          <p>Sign up for an account to take advantage of order tracking and history as well as pre-filled forms during checkout on subsequent orders.</p>
          <a href="{{ routes.account_register_url }}" class="btn btn-site mt-4">Register</a>
        </div>
      </div>
    </div>
  </figure>
</section>

<script type="text/javascript">
  $(document).ready(function() {
    if (window.location.href.indexOf("recover") > -1) {
      $('.form-login-wrapper').hide();
      $('.form-forgot-password-wrapper').show();
    }
  });

$('.btn-forgot-password').click(function (e){
  $('.form-login-wrapper').hide();
  $('.form-forgot-password-wrapper').show();
});

$('.btn-cancel-to-login').click(function (e){
  $('.form-login-wrapper').show();
  $('.form-forgot-password-wrapper').hide();
});
</script>

